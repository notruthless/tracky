<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, size:30 %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="form-button" >
      <%= link_to "Create task", new_task_path, class: "btn btn-small btn-primary" %>

    </section>

  </aside>
</div>

<section class="tasks">
  <div class="col-md-8">
    <% if @user.owned_tasks.any? %>
        <h4> Tasks I own (<%= @user.owned_tasks.count %>)</h4>
        <ul class="tasks">
          <%= render @owned_tasks %>
        </ul>
    <% end %>
  </div>

  <div class="col-md-8">
    <% if @user.assigned_tasks.any? %>
        <h4> My assigned tasks (<%= @user.assigned_tasks.count %>)</h4>
        <ul class="tasks">
          <%= render @assigned_tasks %>
        </ul>
    <% end %>
  </div>

</section>